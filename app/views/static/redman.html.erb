<header>
  <h1><%= @category.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Category", edit_human_path(@category),
            class: "edit"  %></li>

    <li><%= link_to "Delete Category", human_path(@category),
       method: :delete,
       data: { confirm: "Are you sure you want to delete this category?" },
        class: "delete" %></li>
  </ul>
  
  <%= radio_button("post", "category", "rails") %>
</header>